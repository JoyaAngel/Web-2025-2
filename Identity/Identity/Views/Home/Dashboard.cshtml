@{
    ViewData["Title"] = "Panel de Control";
}

<div class="text-center">
    <h1 class="display-4">Panel de Control</h1>
    <p>Esta página solo puede ser vista por usuarios autenticados.</p>

    <div class="card mt-4">
        <div class="card-header">
            Información del Usuario
        </div>
        <div class="card-body">
            <h5 class="card-title">@User.Identity?.Name</h5>
            <p class="card-text">Esta es tu área personal en la aplicación.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver al inicio</a>
        </div>
    </div>
</div>
