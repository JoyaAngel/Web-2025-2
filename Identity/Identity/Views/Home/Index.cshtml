@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <p>Esta es la página de inicio pública de nuestra aplicación.</p>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-success">Ir al Panel de Control</a>
    }
    else
    {
        <p>Inicia sesión para acceder a tu panel de control.</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Iniciar sesión</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Registrarse</a>
    }
</div>